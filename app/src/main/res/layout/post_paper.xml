<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="100dp"
                android:src="@drawable/paper1" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="362dp"
                android:gravity="center"
                android:layout_marginLeft="24dp"
                android:text="종이류"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="85dp"

                android:src="@drawable/paper2" />

            <TextView
                android:layout_width="362dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:gravity="center"
                android:text="스프링이나 테이프 등 \n종이류와 다른 재질은 제거한다."
                android:textColor="@color/black"
                android:textSize="24dp" />


            <ImageView
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="85dp"
                android:src="@drawable/paper3" />

            <TextView
                android:layout_width="362dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:gravity="center"
                android:text="종이팩과 종이컵은 \n내부의 이물질을 제거한다."
                android:textColor="@color/black"
                android:textSize="24dp" />

            <ImageView
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="85dp"
                android:src="@drawable/paper4" />

            <TextView
                android:layout_width="362dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginBottom="100dp"
                android:gravity="center"
                android:text="종이팩 전용 수거함이 없는 경우, \n가급적 종이팩을 따로 묶어 \n종이류와 구분해 배출한다."
                android:textColor="@color/black"
                android:textSize="24dp" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>