<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <Button
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00ffffff"
        android:text="BACK"
        android:textSize="20dp"
        android:textColor="@color/main_green"
        android:drawableLeft="@drawable/ic_baseline_chevron_left_24"
        android:padding="10dp" />

    <ImageView
        android:id="@+id/img_preview1"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/btn_back"
        android:layout_marginTop="28dp" />
    <TextView
        android:id="@+id/resultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_preview1"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text="결과"
        android:textSize="30dp" />


    <TextView
        android:id="@+id/qnaText"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_below="@id/resultText"
        android:padding="20dp"
        android:textSize="20dp" />


    <Button
        android:id="@+id/next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="#A62EBE3D"
        android:layout_below="@id/qnaText"
        android:layout_marginRight="15dp"
        android:text="NEXT"
        android:textColor="@color/white"
        android:drawableRight="@drawable/ic_baseline_arrow_right_alt_24"
        android:padding="10dp" />

    <Button
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#A62EBE3D"
        android:layout_below="@id/qnaText"
        android:layout_marginLeft="15dp"
        android:text="BACK"
        android:textColor="@color/white"
        android:drawableLeft="@drawable/ic_baseline_keyboard_backspace_24"
        android:padding="10dp" />
</RelativeLayout>




